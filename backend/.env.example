# ðŸ”’ SECURITY CONFIGURATION - REQUIRED FOR PRODUCTION
# Copy this file to .env and fill in your secure values

# JWT Security (CRITICAL - Generate a strong secret)
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-different-from-jwt-secret

# Encryption Key (CRITICAL - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your-64-character-hex-encryption-key-generated-securely

# Database Configuration (if using database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_career_coach
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password
DB_SSL=true

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-16-character-app-password
EMAIL_FROM="AI Career Agent Coach" <noreply@aicareeragentcoach.com>
EMAIL_REPLY_TO=support@aicareeragentcoach.com

# Google Calendar API
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/calendar/auth/callback

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Stripe Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Application Configuration
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://yourdomain.com

# Security Configuration
ADMIN_IP_WHITELIST=192.168.1.100,10.0.0.50
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-different-from-jwt
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# Logging and Monitoring
LOG_LEVEL=info
SECURITY_LOG_WEBHOOK=https://your-security-monitoring-webhook.com

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD_HASH=$2b$12$your_bcrypt_hashed_admin_password

# Feature Flags
ENABLE_MFA=true
ENABLE_IP_WHITELIST=true
ENABLE_AUDIT_LOGGING=true
ENABLE_SECURITY_HEADERS=true