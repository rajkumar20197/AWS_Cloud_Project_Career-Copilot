# Backend Environment Template - Copy to .env and fill in real values
# NEVER commit .env files to Git!

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# JWT Secret (MUST be 32+ characters)
JWT_SECRET=generate_a_secure_32_character_random_string_here

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Database
DYNAMODB_TABLE_NAME=career-copilot-users

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password_here
EMAIL_FROM=support@careercopilot.com
EMAIL_REPLY_TO=your_email@gmail.com

# Google Calendar API
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/api/google/callback

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs
STRIPE_PRICE_PRO=price_your_pro_price_id
STRIPE_PRICE_PREMIUM=price_your_premium_price_id

# S3 Configuration
S3_BUCKET_NAME=career-copilot-uploads